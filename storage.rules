rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /photos/{inspectionId}/{filename} {
      // Read allowed for now (change later)
      allow read: if true;
      // Allow write if authenticated OR temporarily allow during dev
      allow write: if request.auth != null || request.time < timestamp.date(2025, 12, 31);
    }

    match /{allPaths=**} {
      allow read: if true;
    }
  }
}
